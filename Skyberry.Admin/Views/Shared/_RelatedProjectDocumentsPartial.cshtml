@model List<Skyberry.Domain.ProjectDocument>

<div class="related">
    <h4>Project Documents</h4>
    <table id="tbl-grid-project-document" class="tbl-grid hl pad-full">
        <tr>
            <th class="c1">Account</th>
            <th class="c2">Project</th>
            <th class="c3">Filename</th>
            <th class="c4">Title</th>
            <th class="c5">Version</th>
            <th class="c6"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="c1">
                    @Html.DisplayFor(modelItem => item.Project.Account.Name)
                </td>
                <td class="c2">
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td class="c3">
                    <a href="/files/@item.Filename" target="_blank">@Html.DisplayFor(modelItem => item.FilenameOriginal)</a>
                </td>
                <td class="c4">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="c5">
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td class="c6">
                    @Html.ActionLink("Edit", "Edit", "ProjectDocuments", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "ProjectDocuments", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "ProjectDocuments", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </table>
</div>