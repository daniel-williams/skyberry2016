@model List<Skyberry.Domain.Testimonial>

<div class="related">
    <h4>Testimonials</h4>
    <table id="tbl-grid-testimonial" class="tbl-grid hl">
        <tr>
            <th class="c1">Account</th>
            <th class="c2">Title</th>
            <th class="c3">Description</th>
            <th class="c4">Active</th>
            <th class="c5"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="c1">
                    @Html.DisplayFor(modelItem => item.Account.Name)
                </td>
                <td class="c2">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="c3">
                    @Html.Raw(item.Description)
                </td>
                <td class="c4">
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td class="c5">
                    @Html.ActionLink("Edit", "Edit", "Testimonials", new { id = item.TestimonialId }, null) |
                    @Html.ActionLink("Details", "Details", "Testimonials", new { id = item.TestimonialId }, null) |
                    @Html.ActionLink("Delete", "Delete", "Testimonials", new { id = item.TestimonialId }, null)
                </td>
            </tr>
        }
    </table>
</div>