@model List<Skyberry.Domain.ImageSetItem>

<div class="related">
    <h4>Image Set Items</h4>
    <table id="tbl-grid-image-set-item" class="tbl-grid hl">
        <tr>
            <th class="c1"></th>
            <th class="c2">ImageSet</th>
            <th class="c3">Position</th>
            <th class="c4"></th>
        </tr>
        @foreach (var item in Model.OrderBy(e => e.Position))
        {
            <tr>
                <td class="c1">
                    <img src="/files/@item.Image.Filename?mode=crop&width=50" title="@item.Image.Title (@item.Image.FilenameOriginal)" />
                </td>
                <td class="c2">
                    @Html.DisplayFor(modelItem => item.ImageSet.Name)
                </td>
                <td class="c3">
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td class="c4">
                    @Html.ActionLink("Edit", "Edit", "ImageSetItems", new { id = item.ImageSetItemId }, null) |
                    @Html.ActionLink("Details", "Details", "ImageSetItems", new { id = item.ImageSetItemId }, null) |
                    @Html.ActionLink("Delete", "Delete", "ImageSetItems", new { id = item.ImageSetItemId }, null)
                </td>
            </tr>
        }
    </table>
</div>
