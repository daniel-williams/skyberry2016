@model Skyberry.Admin.ViewModels.SignInVM

@{
    ViewBag.Title = "Account Sign In";
}
@section meta_tags
{
    <meta name="description" content="Account sign in for Skyberry Studio clients." />
}
@section nav_top
{
    @Html.Partial("_NavTopPartial", new Skyberry.Admin.ViewModels.NavVM("MyAccount"))
}
@section nav_bottom
{
    @Html.Partial("_NavBottomPartial", new Skyberry.Admin.ViewModels.NavVM("MyAccount"))
}


<div class="container fixed section">
    <div class="col-xs-12 pull-left">
        <h1>sign in to access your account</h1>
    </div>
    <div class="col-xs-12 pull-left">
        <section id="login-form">
            <form action="@Url.Action("Login", "MyAccount", new { ReturnUrl = ViewBag.ReturnUrl })" method="post" class="form-horizontal">
                @*@Html.AntiForgeryToken()*@
                <div class="form-group">
                    @Html.ValidationSummary(true)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-xs-2 control-label" })
                    <div class="col-xs-3">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            </div>
                            <div class="col-xs-12">
                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-xs-2 control-label" })
                    <div class="col-xs-3">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="col-xs-12">
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
                            </div>
                            <div class="col-xs-12">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-2">
                        <input type="submit" value="Sign in" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>


