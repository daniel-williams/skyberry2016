@{
    ViewBag.Title = "Portfolio";
}
@section meta_tags
{
    <meta name="description" content="Portfolio of logo design, website design, graphic design & print design, including award winning and published works." />
}
@section nav_top
{
    @Html.Partial("_NavTopPartial", new Skyberry.Admin.ViewModels.NavVM("Portfolio"))
}
@section nav_bottom
{
    @Html.Partial("_NavBottomPartial", new Skyberry.Admin.ViewModels.NavVM("Portfolio"))
}
@section styles
{
    @Styles.Render("~/bundles/css/portfolio")
}
@section scripts
{
    @Scripts.Render("~/bundles/js/portfolio")
}

<div id="portfolio" class="container fixed section">
    <div class="col-xs-12 pull-left">
        <h1>Portfolio <span class="subtitle"></span></h1>
    </div>
    <div class="controls col-xs-12 pull-left">
        <div class="sub-filters form-group">
            <label class="col-xs-6">
                Showing
                <select>
                    <option selected="selected">Featured</option>
                </select>
            </label>
            <div class="mode"></div>
        </div>
    </div>
    <div class="col-xs-12 pull-left">
        <div class="grid"></div>
    </div>
</div>





<script type="text/template" id="tmpl-portfolio-item">
    <div class='item'>
        <img class='item_img no-show' />
        <img class='item_overlay' src='/images/rollover.png' alt='overlay' />
        <div class='item_frame'></div>
        <div class='item_info no-show'>
            <span class='item_ttl'></span><br />
            <span class='item_desc'></span>
        </div>
    </div>
</script>




<script type="text/template" id="tmpl-image-set">
    <div id="image-set" class="container fixed">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-7">
                    <img src="" alt="" class="image" />
                    <div class="controls">
                        <span class="prev disabled"><i class="icon-arrow-left"></i></span>
                        <span class="count"></span>
                        <span class="next disabled"><i class="icon-arrow-right"></i></span>
                    </div>
                </div>
                <div class="col-xs-5 detail">
                    <div class="rt"><i class="icon-close"></i></div>
                    <h3 id="title" class="title"></h3>
                    <div id="description">
                        <label>Project Description:</label>
                        <div class="val description"></div>
                    </div>
                    <div class="testimonials">
                        <label>Client Comments:</label>
                        <div class="val"></div>
                    </div>
                    <div class="accolades">
                        <label>Accolades:</label>
                        <div class="val"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
